<!DOCTYPE html>
<html lang="en">
{% extends "base.html" %}
{% block page_content %}
<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <h1 class="page-title"> 日志搜索
    </h1>
    <!-- END PAGE HEADER-->
    <div class="m-heading-1 border-green m-bordered">
        <form class="form-horizontal" role="form">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-1 control-label">请选择主机</label>
                    <div class="col-md-5">
                        <select id="select_hostname" class="mt-multiselect btn btn-default" multiple="multiple" data-label="left" data-select-all="true" data-width="100%" data-filter="true" data-action-onchange="true">
                            <option value="1">hytest </option>
                            <option value="2">hytest2 </option>
                            <option value="3">Option 3 </option>
                            <option value="4">Option 4 </option>
                            <option value="5">Option 5 </option>
                            <option value="6">Option 6 </option>
                        </select>
                    </div>
                    <label class="col-md-1 control-label">请选择日志</label>
                    <div class="col-md-5">
                        <select class="mt-multiselect btn btn-default" multiple="multiple" data-label="left" data-select-all="true" data-width="100%" data-filter="true" data-action-onchange="true">
                            <option value="1">告警日志</option>
                            <option value="2">监听日志</option>
                            <option value="3">NC日志</option>
                            <option value="4">Option 4</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-11 col-md-1">
                        <button type="button" class="btn green" id="log_submit">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-12 col-xs-12 col-sm-12">
            <div class="portlet light ">
                <div class="portlet-body log_display">
                    <table class="table table-striped table-bordered table-hover" id="log_detail">
                        <thead>
                            <tr>
                                <th>时间</th>
                                <th>日志内容</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for line in data %}
                            <tr>
                                <td>{{line['time']}}</td>
                                <td>{{line['message']}}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function(){
    $('#log_submit').click(function() {
    $(".log_display").hide(100);
    var hostname = $("#select_hostname").find('option:selected').text();
    $(".log_display").load("/loginfo/search/logdisplay_sub", {"uid":hostname}, function(){$(".log_display").show(50);});
    });
    });
</script>

{% endblock %}
</html>
